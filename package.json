  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@commitlint/cli": "^14.1.0",
    "@swc/core": "^1.2.224",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.21.0",
    "eslint-config-iroot": "^1.4.4",
    "husky": "^7.0.4",
    "jest": "^28.1.3",
    "jest-easy": "^1.0.3",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "typescript": "^4.7.4",
    "vue": "^3.2.37"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "update:deps": "yarn upgrade-interactive --latest",
    "clear:modules": "node ./scripts/removeSubNodeModules.js",
    "postinstall": "yarn clear:modules && yarn build:bundles-models && yarn build:build-easy",
    "build:bundles-models": "cd ./packages/bundles && yarn compile",
    "build:build-easy": "cd ./packages/build-easy && yarn compile",
    "lint": "eslint --fix --ext .ts,.js packages/",
    "test:coverage": "cd ./packages/build-easy && yarn test:coverage",
    "test": "cd ./packages/build-easy && yarn test"
  }
}
