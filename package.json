{
  "name": "zmi-nerd",
  "private": true,
  "version": "1.2.2-3",
  "description": "library build tool.",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "authors": [
    "l-zoy <zoy-l@outlook.com> (https://github.com/l-zoy)"
  ],
  "devDependencies": {
    "@vercel/ncc": "^0.30.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "node -r ./compile.js ./src/cli.ts build",
    "compile:watch": "node -r ./compile.js ./src/cli.ts build --watch",
    "test": "node ./lib/cli.js test --coverage",
    "clearCache": "node ./lib/cli.js test --clearCache",
    "update:deps": "yarn upgrade-interactive --latest --registry=https://registry.npm.taobao.org/",
    "debug": "node --inspect-brk bin/zmi-nerd.js build"
  },
  "dependencies": {},
  "files": [
    "bin",
    "lib"
  ],
  "bin": {
    "nerd": "./bin/zmi-nerd.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/l-zoy/zmi-nerd"
  },
  "homepage": "https://github.com/l-zoy/zmi-nerd",
  "bugs": "https://github.com/l-zoy/zmi-nerd/issues",
  "keywords": [
    "zmi-nerd",
    "gulp",
    "gulpplugin",
    "小程序",
    "打包",
    "typescript"
  ],
  "peerDependencies": {
    "typescript": "4.x"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
