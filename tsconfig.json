{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/src",
    "packages/build-easy/src/index.test.tsest.ts",
    "packages/build-easy/test/fixtures/build-vue-ts/tsx.tsxsx.tsx",
    "packages/build-easy-site/tsconfig.json"
  ],
  "exclude": ["./node_modules", "./packages/**/node_modules", "./packages/**/fixtures"]
}
