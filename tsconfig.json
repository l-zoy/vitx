{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/src", "packages/vitx/src/index.test.ts"],
  "exclude": ["./node_modules", "./packages/**/node_modules", "./packages/**/fixtures"]
}
