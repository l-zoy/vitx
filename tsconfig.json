{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/src",
    "packages/vitx/src/index.test.ts",
    "packages/vitx/test/fixtures/build-vue-ts/tsx.tsx",
    "packages/vitx-site/tsconfig.json"
  ],
  "exclude": ["./node_modules", "./packages/**/node_modules", "./packages/**/fixtures"]
}
